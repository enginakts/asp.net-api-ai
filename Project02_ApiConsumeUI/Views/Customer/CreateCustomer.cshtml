@model CreateCustomerDTO

@{
    Layout = null;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-body">
                    <h3 class="text-center mb-4">Müşteri Oluştur</h3>
                    <form method="post">
                        <div class="mb-3">
                            <label class="form-label">Müşteri Adı</label>
                            <input type="text" asp-for="CustomerName" class="form-control" placeholder="Adınızı girin">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Müşteri Soyadı</label>
                            <input type="text" asp-for="CustomerSurName" class="form-control" placeholder="Soyadınızı girin">
                        </div>
                        <div class="mb-3">
                            <label class="form-label">Müşteri Bakiyesi</label>
                            <input type="number" asp-for="CustomerBalance" class="form-control" placeholder="Bakiye girin">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-user-plus"></i> Müşteri Oluştur
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
