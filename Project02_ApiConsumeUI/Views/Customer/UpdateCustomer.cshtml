@model UpdateCustomerDTO


<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-5 col-md-7">
            <div class="card shadow-lg border-primary rounded-4">
                <div class="card-header bg-primary text-white text-center">
                    <h4 class="mb-0">Müşteri Güncele</h4>
                </div>
                <div class="card-body p-4">
                    <form method="post" asp-action="UpdateCustomer">
                        <input type="hidden" asp-for="CustomerId">
                        <div class="mb-3">
                            <label class="form-label fw-bold">Müşteri Adı</label>
                            <input type="text" asp-for="CustomerName" class="form-control" placeholder="Adınızı girin">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Müşteri Soyadı</label>
                            <input type="text" asp-for="CustomerSurName" class="form-control" placeholder="Soyadınızı girin">
                        </div>
                        <div class="mb-3">
                            <label class="form-label fw-bold">Müşteri Bakiyesi</label>
                            <input type="number" asp-for="CustomerBalance" class="form-control" placeholder="Bakiye girin">
                        </div>
                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg">
                                <i class="fas fa-user-plus"></i> Güncelle
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    console.log("id : "@Model.CustomerId)
</script>
